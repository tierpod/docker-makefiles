FROM builder-fedora
MAINTAINER Pavel Podkorytov <pod.pavel@gmail.com>

ENV TARGET={target}

USER root

# Install dependencies from spec-file
ADD ["volume/SPECS/$TARGET", "/tmp/"]
RUN dnf builddep -y /tmp/$TARGET

ADD ["entrypoint.sh", "/entrypoint.sh"]
RUN chmod +x /entrypoint.sh

USER builder

CMD /entrypoint.sh
